
#include <Servo.h>
Servo motor1;
Servo motor2;
Servo motor3;

void setup() {
  motor1.attach(3);
  motor2.attach(5);
  motor3.attach(6);
  motor1.write(0);
  motor2.write(0);
  motor3.write(0);
  pinMode(7,INPUT);
  digitalWrite(7,HIGH);
}

void loop() {
  int data = digitalRead(7);
  if(data==LOW)
  {
     delay(500);
  motor1.write(90);
  delay(1000);
   motor2.write(90);
  delay(2000);
   motor3.write(83);
  delay(2000);
   motor2.write(0);
  delay(2000);
   motor1.write(0);
  delay(1000);
   motor2.write(90);
  delay(2000);
   motor3.write(0);
  delay(2000);
   motor2.write(0);
  delay(1000);
  }
  else{
    motor1.write(0);
    motor2.write(0);
    motor3.write(0);
    
  }

}
